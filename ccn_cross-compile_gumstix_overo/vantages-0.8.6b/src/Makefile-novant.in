CC =    @CC@
CXX =    @CXX@
DEFINES = -g -Wall -Werror @DEFS@
CFLAGS =  @CFLAGS@ @CPPFLAGS@ $(DEFINES)
CXXFLAGS =  @CXXFLAGS@ 
CPPFLAGS = -DDEBUG -D_POSIX_THREADS -D_REENTRANT -I../dns -I/usr/local/include -I/opt/local/include -I/usr/local/include/gpgme @CPPFLAGS@ 
LDFLAGS = -L../lib -L../dns/lib -L/usr/local/lib -L/opt/local/lib @LDFLAGS@ 
LIBS = -lvdns @LIBS@

libtool  = @libtool@
LIBTOOL = $(libtool) --tag=CXX
LINK_LIB  = $(LIBTOOL) --mode=link $(CXX) $(CXXFLAGS) $(CPPFLAGS) $(LDFLAGS) 
prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

PROG = dnsfunnel dnskey-grab 

#CXXFLAGS += $(CFLAGS)

.cc.o:
	$(CXX) $(CXXFLAGS) $(DEFINES) $(CPPFLAGS) -c $<

.c.o:
	$(CC) $(CFLAGS) $(DEFINES) $(CPPFLAGS) -c $<

all: $(PROG)

$(PROG): 
	$(LINK_LIB) -o $@ $@.cc $(LIBS)
	$(CXX) $(CXXFLAGS) $(DEFINES) $(CPPFLAGS) $(LDFLAGS) -o ../bin/$@ $@.cc $(LIBS)

$(TEST_DRIVERS): $(OBJS)
	$(LINK_LIB) -o $@ $@.cc $(LIBS)

clean:
	rm -f $(PROG) 
